return {
    {
        "yetone/avante.nvim",
        -- 只在按键或命令触发时加载（不再 VeryLazy 自动启动）
        cmd = { "Avante", "AvanteAsk", "AvanteEdit", "AvanteToggle", "AvanteChat" },
        keys = {
            { "<leader>aa", "<cmd>AvanteAsk<cr>", desc = "Avante Ask" },
            { "<leader>ae", "<cmd>AvanteEdit<cr>", mode = { "n", "v" }, desc = "Avante Edit (visual ok)" },
            { "<leader>at", "<cmd>AvanteToggle<cr>", desc = "Avante Toggle" },
            { "<leader>ac", "<cmd>AvanteChat<cr>", desc = "Avante Chat" },
        },

        -- if you want to build from source then do `make BUILD_FROM_SOURCE=true`
        -- ⚠️ must add this setting! ! !
        build = function()
            if vim.fn.has("win32") == 1 then
                return "powershell -ExecutionPolicy Bypass -File Build.ps1 -BuildFromSource false"
            else
                return "make"
            end
        end,

        version = false, -- Never set this value to "*"! Never!

        ---@type avante.Config
        opts = {
            provider = "gemini",
            providers = {
                gemini = {
                    endpoint = "https://generativelanguage.googleapis.com/v1beta/models",
                    model = "gemini-2.5-flash",
                    timeout = 30000,
                    extra_request_body = {
                        generationConfig = {
                            temperature = 0.7,
                            maxOutputTokens = 2048,
                        },
                    },
                },
            },
        },

        dependencies = {
            "nvim-lua/plenary.nvim",
            "MunifTanjim/nui.nvim",

            -- 这些都是可选依赖，只有 Avante 加载时才会一起拉起来
            { "nvim-mini/mini.pick", lazy = true },
            { "nvim-telescope/telescope.nvim", cmd = "Telescope", lazy = true },
            { "hrsh7th/nvim-cmp", lazy = true },
            { "ibhagwan/fzf-lua", cmd = "FzfLua", lazy = true },
            { "stevearc/dressing.nvim", lazy = true },
            { "folke/snacks.nvim", lazy = true },
            { "nvim-tree/nvim-web-devicons", lazy = true },
            { "zbirenbaum/copilot.lua", cmd = "Copilot", lazy = true },

            -- 图片粘贴（保持你原来的 VeryLazy）
            {
                "HakonHarnes/img-clip.nvim",
                event = "VeryLazy",
                opts = {
                    default = {
                        embed_image_as_base64 = false,
                        prompt_for_file_name = false,
                        drag_and_drop = { insert_mode = true },
                        use_absolute_path = true, -- Windows 需要
                    },
                },
            },

            -- markdown 渲染（只在 markdown/Avante 缓冲里起）
            {
                "MeanderingProgrammer/render-markdown.nvim",
                opts = { file_types = { "markdown", "Avante" } },
                ft = { "markdown", "Avante" },
            },
        },
    },
}
