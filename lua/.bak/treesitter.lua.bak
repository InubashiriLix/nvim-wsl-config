return {
    -- Pin 到旧分支（master），给 Neorg 提供旧的 ts_utils 兼容面
    {
        "nvim-treesitter/nvim-treesitter",
        branch = "master",
        lazy = false, -- 关键：启动就加载，headless 也生效
        build = ":TSUpdate",
        main = "nvim-treesitter.configs",
        init = function()
            local install = require("nvim-treesitter.install")
            install.prefer_git = false -- 用 tarball 下载，成功率更高
            -- 不要再设置 install.compilers（已废弃）；要选编译器用 CC 环境变量
        end,
        opts = {
            ensure_installed = {
                "lua",
                "vim",
                "vimdoc",
                "bash",
                "c",
                "cpp",
                "markdown",
                "markdown_inline",
                "norg",
                "norg_meta",
                "norg_table",
            },
            auto_install = true,
            highlight = { enable = true },
            indent = { enable = true, disable = { "python" } },
        },
    },

    -- textobjects 也一起 pin 回 master，避免 API 不匹配
    { "nvim-treesitter/nvim-treesitter-textobjects", branch = "master" },
}
